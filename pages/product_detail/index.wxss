/* pages/product_detail/index.wxss */
.swiper {
  width: 100%;
  height: 712rpx;
  background-color: #F7F7FA;
  padding-bottom: 20rpx;
}

.slide-image {
  width: 100%;
  height: 712rpx;
}

.action_box {
  width: 100%;
  height: 96rpx;
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: flex-end;
  border-top: 1rpx solid #F7F7FA;
}

.action_box .btn {
  width: 50%;
  height: 100%;
  border-radius: 0;
  border: 0;
  font-size: 36rpx;
  color: #fff;
}

.message {
  padding: 0 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.title {
  width: 100%;
  padding: 20rpx;
  border-bottom: 1rpx solid #F7F7FA;
  box-sizing: border-box;
  font-size: 36rpx;
  color: #726a6a;
}

.price {
  color: #d32d2d;
  font-size: 42rpx;
}

.jian{
  width: 54rpx;
  border: 1rpx solid #ccc;
  color: #ccc;
  font-size: 27rpx;
  border-radius: 12rpx 0 0 12rpx;
}

.jia{
  border-radius: 0 12rpx 12rpx 0;
  font-size: 60rpx;
  width: 54rpx;
  text-align: center; 
  line-height: 45rpx;
  border: 1rpx solid #ccc;
  color: #ccc;
  font-weight: 200;
  margin-right: 20rpx;
}

.num {
  color: #928d8d;
  width: 54rpx;
  text-align: center;
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
}

.hover_num {
  color: #d32d2d;
  border: 1rpx solid #d32d2d;
}
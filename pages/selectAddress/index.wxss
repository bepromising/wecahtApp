/* pages/address/index.wxss */

.address_page {
  width: 100%;
  position: relative;
  padding: 20rpx 20rpx 100rpx 20rpx;
  box-sizing: border-box;
  height: 100%;
}

.add_address {
  height: 90rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
}

.address-item {
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  border-radius: 12rpx;
  border: 1rpx solid #F7F7FA;
  box-shadow: 0 0 12rpx 2rpx #F7F7FA;
  height : 176rpx;
  margin: 15rpx 0;
}

.left {
  width: 90%;
  box-sizing: border-box;
  padding: 10rpx;
  height: 100%;
  font-size:32rpx; 
  color: #6d6868;
}

.right {
  width: 10%;
  height: 100%;
  box-sizing: border-box;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column-reverse;
  justify-content: space-between;
  align-items: center;
  color: #ccc;
}
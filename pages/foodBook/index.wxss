/* pages/foodBook/index.wxss */
.searchBox {
  background-color: #efeff1;
}

.searchBox > .search {
  width:100%;
}

.food_book {
  width: 100%;
}

.item {
  width: 100%;
  box-sizing: border-box;
  padding: 16rpx;
  padding-left: 30rpx;
  height: 220rpx;
  border-bottom: 1rpx solid #e6e6e9;
  display: flex;
  flex-direction: row;
  background-color: #f5f5f5;
}

.image {
  width: 188rpx;
  height: 188rpx;
}

.content {
  box-sizing: border-box;
  flex:1;
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: blod;
  padding-bottom: 20rpx;
  /* color:#666; */
}

.detail {
  font-size: 30rpx;
  color:#666;
  word-break: break-all
}
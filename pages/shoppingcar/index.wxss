/* pages/shoppingcar/index.wxss */

.card {
  background-color: #ffffff;
  width: 100%;
  box-sizing: border-box;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  height: 250rpx;
}

.card > .icon {
  padding: 0 10rpx;
  width: 10%;
  height: 100%;
}

.card_img {
  width:200rpx;
  height: 200rpx;
  padding: 25rpx 0;
}

.product_msg {
  padding: 25rpx 20rpx;
  width: calc(100% - 200rpx);
  box-sizing: border-box;
}

.jian{
  width: 54rpx;
  border: 1rpx solid #ccc;
  color: #ccc;
  font-size: 27rpx;
  border-radius: 12rpx 0 0 12rpx;
}

.jia{
  border-radius: 0 12rpx 12rpx 0;
  font-size: 60rpx;
  width: 54rpx;
  text-align: center; 
  line-height: 45rpx;
  border: 1rpx solid #ccc;
  color: #ccc;
  font-weight: 200;
}

.hover_num {
  color: #d32d2d;
  border: 1rpx solid #d32d2d;
}

.num {
  color: #928d8d;
  width: 54rpx;
  text-align: center;
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
}

.icon-money {
  padding-top: 14rpx;
  padding-left: 14rpx;
  font-size: 30rpx;
  color: #d32d2d;
}

.price {
  color: #d32d2d;
  font-size: 42rpx;
}

.controls {
  width: 100%;
  /* border-radius: 12rpx 12rpx 0 0; */
  height: 96rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
  z-index: 12;
}

.controls-btn {
  height: 100%;
  position: absolute;
  right: 0;
  top: 0;
}
/* pages/order_detail/index.wxss */

.ordeer-detail-page {
  position: relative;
  padding-bottom: 20rpx;
}

.order_status {
  width: 100%;
  height: 220rpx;
  text-align: center;
  font-size: 36rpx;
  line-height: 160rpx;
  color: #fff;
}

.address {
  justify-content: center;
  width: 100%;
}

.address_msg {
  width: 90%;
  height: 154rpx;
  position: relative;
  top: -74rpx;
  border-radius: 12rpx;
  z-index: 10;
  box-shadow: 0 1rpx 4rpx #ccc;
  background-color: #fff;
  box-sizing: border-box;
  padding: 20rpx;
  font-size: 30rpx;
  color: #928f8f;
}

.product {
  width: 100%;
  padding: 0 20rpx 20rpx 20rpx;
  box-sizing: border-box;
}

.product-box {
  border-radius: 12rpx;
  width: 100%;
  height: 252rpx;
  box-shadow: 0 0 12rpx 4rpx #e7e7e7;
  box-sizing: border-box;
  padding: 20rpx;
}

.product-box .img {
  width: 80rpx;
  height: 80rpx;
}

.product-box .title {
  font-size: 30rpx;
  padding-left: 20rpx;
  height: 80rpx;
  color: #928f8f;
}

.order-box {
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
}

.order_msg {
  justify-content: space-between;
  color: #928f8f;
  padding: 10rpx 0;
  font-size: 28rpx;
  border-bottom: 1rpx solid #ccc;
}

.order_total {
  justify-content: space-between;
  color: #d13f3f;
  padding: 10rpx 0;
  font-size: 28rpx;
  border-bottom: 1rpx solid #ccc;
}

.msg_name {
  padding-left: 10rpx;
}

.pay_box {
  height: 96rpx;
  position: fixed;
  left:0;
  bottom: 0;
  justify-content: space-between;
  width: 100%;
  background-color: #fff;
  border-top: 1rpx solid #e7e7e7;
}

.pay_box .btn {
  background-color: #d32d2d;
  color: #fff;
  font-size: 36rpx;
  height: 100%;
  width: 202rpx;
  border-radius: 0;
  border: 0;
  margin: 0;
}

.pay_box .total {
  color: #d32d2d;
  font-size: 40rpx;
  line-height: 96rpx;
  padding-right: 8rpx;
}
/* pages/checkedOrder/index.wxss */
.product_list {
  width:100%;
  box-sizing: border-box;
  padding: 20rpx 0 10rpx 0;
  background-color: #d4d1d1;
}

.product_list .item {
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx 40rpx 10rpx 40rpx;
  background-color: #fff;
  height: 180rpx;
  margin-bottom: 10rpx;
}

.product_list .item .img {
  width: 160rpx;
  height: 160rpx;
}
.product_list .item .img image {
  width: 100%;
  height: 100%;
}

.product_list .name {
  font-size: 38rpx;
  color: #666;
}

.product_list .price {
  color: #d32d2d;
}

.product_list .item .num {
  color: #b1b0b0;
  font-size: 36rpx;
}

.address {
  width: 100%;
  height:80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #d4d1d1;
}

.remark {
  width: 100%;
  height:70rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #d4d1d1;
}

.title {
  font-size: 38rpx;
  color: #666;
}

.address_detail {
  width:100%;
  margin:20rpx 0;
  padding: 20rpx 0;
  border-radius: 12rpx;
  border: 1rpx solid #F7F7FA;
  box-shadow: 0 0 12rpx 2rpx #F7F7FA;
}

.address_detail_info {
  font-size: 36rpx;
  color: #7c7b7b;
  padding-left: 40rpx;
}

.pay_box {
  height: 96rpx;
  position: fixed;
  left:0;
  bottom: 0;
  justify-content: space-between;
  width: 100%;
  background-color: #fff;
  border-top: 1rpx solid #e7e7e7;
}

.pay_box .btn {
  background-color: #d32d2d;
  color: #fff;
  font-size: 36rpx;
  height: 100%;
  width: 202rpx;
  border-radius: 0;
  border: 0;
  margin: 0;
}

.pay_box .total {
  color: #d32d2d;
  font-size: 40rpx;
  line-height: 96rpx;
  padding-right: 8rpx;
}
/* pages/home/index.wxss */

.top {
  background-color: #f88787;
  height: 400rpx;
  width: 100%;
}

.avatar {
  border: 1rpx solid #f88787;
  border-radius: 50%;
  width: 170rpx;
  height: 170rpx;
  overflow: hidden;
}

.avatar > image {
  width: 100%;
  height: 100%;
  background-color: #e2e2e2;
}

.name {
  color: #fff;
  padding: 20rpx 0;
  font-size: 36rpx;
}

.btn {
  width: 160rpx;
  margin-top: 30rpx;
  color: black;
}

.function {
  width: 100%;
  padding-top: 30rpx;
  justify-content: space-around;
  flex-wrap: wrap;
}

.function-item {
  width: 28%;
  height: 188rpx;
  /* background-color: #F7F7FA; */
  border-radius: 12rpx;
  border: 1rpx solid #f7f7fa;
  margin-bottom: 30rpx;
  box-shadow: 0 0 12rpx 2rpx #F7F7FA;
  
}

.function-item > image {
  width: 90rpx;
  height: 90rpx;
}

.fun_name {
  font-size: 32rpx;
  color: #7e7a7a;
}

.contract {
  width: 70rpx;
  height: 70rpx;
  position: fixed;
  right: 26rpx;
  bottom: 64rpx;
  overflow: hidden;
  border-radius: 50%;
  z-index: 20;
  background-color: #ec7474;
  border: 0;
  
}

.contract  image {
  width: 50rpx;
  height: 50rpx;
}

.admin_fun {
  width: 100%;
  flex-wrap: wrap;
}

.admin_fun .fun_item {
  width: 30%;
  margin: 0 1% 30rpx 1%;
  height: 188rpx;
  border-radius: 12rpx;
  border: 1rpx solid #f7f7fa;
  box-shadow: 0 0 12rpx 2rpx #F7F7FA;
}

.fun_item > image {
  width: 90rpx;
  height: 90rpx;
}

.fun_name {
  font-size: 32rpx;
  color: #7e7a7a;
}

.userLevel {
  margin: 0 auto;
  padding: 10rpx;
  border: 1rpx solid #e6e341;
  border-radius: 12rpx;
  color: #e6e341;
  font-size: 20rpx;
}